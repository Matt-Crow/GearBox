@page
@{
    ViewData["Title"] = "World";
}
<div id="playerAlive">
    <!-- drawing canvas -->
    <canvas id="canvas" width="800", height="600"></canvas>
    <!-- player HUD -->
    <div id="playerHud" class="d-flex justify-content-between">
        <div>HP: <span class="currentHP">x</span>/<span class="maxHP">100</span></div>
        <div>Energy: <span class="currentEnergy">x</span>/<span class="maxEnergy">100</span></div>
    </div>
    <!-- inventory model -->
    <dialog id="inventoryModal" style="width: 90vw; height: 75vh">
        <!-- tab selector -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#materialsTab" type="button" role="tab" aria-controls="materialsTab" aria-selected="true">Materials</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#equipmentTab" type="button" role="tab" aria-controls="equipmentTab" aria-selected="false">Equipment</button>
            </li>
        </ul>
        <div class="tab-content h-100">
            <!-- materials tab -->
            <div class="tab-pane fade active show table-responsive" id="materialsTab" role="tabpanel" aria-labelledby="materials-tab">
                <!-- materials -->
                <div class="h-50">
                    <b>Materials</b>
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody id="materialRows"></tbody>
                    </table>
                </div>
                <hr />
                <!-- crafting -->
                <div class="h-50">
                    <b>Crafting</b>
                    <div class="d-flex">
                        <!-- recipe list -->
                        <div class="w-50">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Recipe</th>
                                        <th>Ingredients</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="recipeRows"></tbody>
                            </table>
                        </div>
                        <!-- item preview -->
                        <div class="w-50">
                            <div id="craftPreview"></div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- equipment tab -->
            <div class="tab-pane fade h-100" id="equipmentTab" role="tabpanel" aria-labelledby="equipment-tab">
                <!-- equipment table -->
                <div class="table-responsive h-50">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Grade</th>
                                <th>Level</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="equipmentRows"></tbody>
                    </table>
                </div>
                <!-- weapon info -->
                <div class="h-50 container">
                    <div class="row">
                        <!-- current weapon -->
                        <div class="col-6" id="currentWeapon"></div>
                        <!-- compare weapon -->
                        <div class="col-6" id="compareWeapon"></div>
                    </div>
                </div>
            </div>
        </div>
    </dialog>
</div>
<div id="playerDead">
    <!-- div inside div so d-flex doesn't override jQuery hide for some reason -->
    <div class="d-flex flex-column">
        <p>Oops!</p>
        <p>Looks like you're dead.</p>
        <div class="d-flex justify-content-center">
            <button id="respawnButton" class="btn btn-primary">Respawn</button>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/Pages/World.cshtml.js" type="module"></script>